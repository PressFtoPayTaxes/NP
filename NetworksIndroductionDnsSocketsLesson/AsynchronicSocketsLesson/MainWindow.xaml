<Window x:Class="AsynchronicSocketsLesson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsynchronicSocketsLesson"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Height="304" Name="textLog" IsReadOnly="True" Margin="10,10,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <ComboBox Name="comboBoxIpServer" HorizontalAlignment="Left" Margin="10,340,0,0" VerticalAlignment="Top" Width="185"/>
        <TextBox Name="textPort" HorizontalAlignment="Left" Height="23" Margin="244,340,0,0" TextWrapping="Wrap" Text="12345" VerticalAlignment="Top" Width="120"/>
        <Label Content="Server IP Address" HorizontalAlignment="Left" Margin="10,314,0,0" VerticalAlignment="Top"/>
        <Label Content="Server Port" HorizontalAlignment="Left" Margin="244,314,0,0" VerticalAlignment="Top"/>
        <Button Content="Start" Name="buttonStart" HorizontalAlignment="Left" Margin="396,343,0,0" VerticalAlignment="Top" Width="75" Click="ButtonStartClick"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="507,343,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
